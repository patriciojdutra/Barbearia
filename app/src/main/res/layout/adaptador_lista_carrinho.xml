<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="#FFFFFF"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imgProdutoCarrinho"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logonormal" />

        <TextView
            android:id="@+id/txtNomeProdutoCarrinho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Nome do produto"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imgProdutoCarrinho"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtQuantidadeProdutoCarrinho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="quantidade: 4"
            app:layout_constraintStart_toEndOf="@+id/imgProdutoCarrinho"
            app:layout_constraintTop_toBottomOf="@+id/txtNomeProdutoCarrinho" />

        <TextView
            android:id="@+id/txtPrecoUnitarioProdutoCarrinho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="R$ 34,00"
            app:layout_constraintStart_toEndOf="@+id/imgProdutoCarrinho"
            app:layout_constraintTop_toBottomOf="@+id/txtQuantidadeProdutoCarrinho" />

        <ImageView
            android:id="@+id/imgDeleteProdutoCarrinho"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.392"
            app:srcCompat="@android:drawable/ic_menu_delete" />

        <TextView
            android:id="@+id/btnTotalProdutoCarrinho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Total: R$ 34,00"
            android:textColor="@color/corGeral"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imgProdutoCarrinho"
            app:layout_constraintTop_toBottomOf="@+id/txtPrecoUnitarioProdutoCarrinho" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>